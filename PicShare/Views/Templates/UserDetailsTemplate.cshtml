@{
    Layout = null;
}

<div class="row">
    <h2 class="h2 text-center" data-bind="text: userName"></h2>
</div>

<div class="row">
    <div class="text-center">
        <img style="width: 200px; min-height: 200px;" class="text-center img-thumbnail"
             data-bind="attr: {alt: userName, src: avatarUrl }" />
    </div>
</div>

<br />

<div class="row">
    <div class="text-center">
        <button class="btn btn-info" data-bind="click: toggleUploadForm, visible: isUserPageOwner">Update your avatar</button>
    </div>
</div>

<!-- ko if: isUploadFormVisible -->
<br />
<div class="row">
    <file-uploader params="{imgUploaded: imgUploaded, userId: userId, isAvatarPicture: true}"></file-uploader>
</div>
<!-- /ko -->